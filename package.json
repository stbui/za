    "main": "lib/index",
    "module": "esm/index.js",
    "types": "esm/index.d.ts",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/stbui/za.git"
    },
    "bugs": {
        "url": "https://github.com/stbui/za/issues"
    },
    "private": true,
    "workspaces": [
        "packages/*",
        "website"
    ],
    "scripts": {
        "build": "lerna run build",
        "release": "yarn run build && lerna publish --exact --conventional-commits",
        "docs": "cd docs && gitbook build",
        "prettier": "prettier --config ./.prettierrc.js --write --list-different \"packages/*/src/**/*.{js,json,ts,tsx}\"",
        "start:docs": "cd docs && gitbook serve",
        "publish:github": "gh-pages -d docs/_book",
        "website": "cd ./website && yarn start",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
    },
    "devDependencies": {
        "@types/styled-components": "^5.1.0",
        "gh-pages": "^2.2.0",
        "gitbook-cli": "^2.3.2",
        "lerna": "^3.22.0",
        "prettier": "^2.0.5",
        "typescript": "^3.9.3",
        "conventional-changelog-cli": "^2.0.34"
    }
}